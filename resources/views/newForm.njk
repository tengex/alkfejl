{% extends 'master' %}

{% block content %}
  <h1>New movie</h1>

  {% if old('errors') %}
    <div class="alert alert-danger">
      <ul>
        {% for error in old('errors') %}
          <li> {{ error.message }} </li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}

  {{ form.open({action: 'MovieController.saveNew'}) }}

    {{ csrfField }}

    <fieldset class="form-group">
      {{ form.label('Movie title') }}
      {{ form.text('title', old('title'), { class: 'form-control' }) }}
    </fieldset>

    <fieldset class="form-group">
      {{ form.label('Release date') }}
      {{ form.text('releaseDate', old('releaseDate'), { class: 'form-control' }) }}
    </fieldset>
    
    <fieldset class="form-group">
      {{ form.label('Length') }}
      {{ form.text('lengthInMinutes', old('lengthInMinutes'), { class: 'form-control' }) }}
    </fieldset>
    
    {{ form.submit('Save', 'save', { class: 'btn btn-primary btn-block' }) }}

  {{ form.close() }}

{% endblock %}